<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.hop</groupId>
		<artifactId>hop</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<groupId>org.hop</groupId>
	<artifactId>hop-expression</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>Hop ${project.artifactId}</name>
	<description>Hop expression language</description>
	<url>http://www.project-hop.org</url>

	<properties>
		<license.licenseName>apache_v2</license.licenseName>

		<hop.home>C:\hop</hop.home>

		<!-- Third-party dependencies -->
		<commons-lang.version>2.6</commons-lang.version>
		<commons-vfs2.version>2.2</commons-vfs2.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo
									message="Installed the plugin in Hop installation in ${hop.home}. To test, please restart Hop" />

								<copy file="${project.build.directory}\${project.artifactId}-${project.version}.jar" todir="${hop.home}\lib" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


	<dependencies>

		<dependency>
			<groupId>org.hop</groupId>
			<artifactId>hop-core</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
 			<version>${commons-lang.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-vfs2</artifactId>
			<version>${commons-vfs2.version}</version>
		</dependency>

		<!-- test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

</project>