<!-- 			<version>3.15.300</version> -->
<!-- 			<scope>compile</scope> -->
<!-- 		</dependency> -->

		<!-- test dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

</project>